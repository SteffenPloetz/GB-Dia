Private Function PreviousItem_Read() As ElementListItem
  Return $oPreviousItem
End

'' Private - no description.
Private Sub PreviousItem_Write(Value As ElementListItem)
  $oPreviousItem = Value
End

'' Private - no description.
Private Function Data_Read() As Element
  Return $oElement
End

'' Private - no description.
Private Sub Data_Write(elementValue As Element)
  $oElement = elementValue
End

'' Private - no description.
Private Function NextItem_Read() As ElementListItem
  Return $oNextItem
End

'' Private - no description.
Private Sub NextItem_Write(Value As ElementListItem)
  $oNextItem = Value
